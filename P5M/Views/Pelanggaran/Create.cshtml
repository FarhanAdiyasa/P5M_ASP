@model P5M.Models.PelanggaranModel

@{
    ViewData["Title"] = "Tambah Pelanggaran";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Tambah Pelanggaran</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-controller="Pelanggaran" asp-action="Create">
                            <div class="form-group">
                                <label asp-for="nama_pelanggaran" class="control-label">Nama Pelanggaran</label>
                                <input asp-for="nama_pelanggaran" class="form-control" name="nama_pelanggaran" />
                                <span asp-validation-for="nama_pelanggaran" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="jam_minus" class="control-label">Jam Minus</label>
                                <input asp-for="jam_minus" class="form-control" name="jam_minus" />
                                <span asp-validation-for="jam_minus" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="status" class="control-label">Status</label>
                                <select asp-for="status" asp-items="Html.GetEnumSelectList<P5M.Models.PelanggaranModel.Status>()" class="form-control" name="status">
                                    <option value="">-- Pilih Status --</option>
                                </select>
                                <span asp-validation-for="status" class="text-danger"></span>
                            </div>

                            <br />
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Simpan</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
